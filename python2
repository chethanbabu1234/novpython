def calculate_ticket_price(age):
    # Ticket price conditions
    if 18 <= age <= 30:
        return 5  # $5 for ages 18 to 30
    elif 30 < age <= 50:
        return 20  # $20 for ages 30 to 50
    elif age > 50:
        return 0  # Free for ages above 50
    else:
        return "Invalid age for entry"  # Age below 18

def convert_to_inr(usd_amount):
    # Assuming 1 USD = 83 INR
    exchange_rate = 83
    return usd_amount * exchange_rate

# User input for age
try:
    age = int(input("Enter your age: "))
    ticket_price_usd = calculate_ticket_price(age)
    
    if isinstance(ticket_price_usd, int):  # Ensure it's a valid price
        ticket_price_inr = convert_to_inr(ticket_price_usd)
        print(f"Ticket price in USD: ${ticket_price_usd}")
        print(f"Ticket price in Indian Rupees: â‚¹{ticket_price_inr}")
    else:
        print(ticket_price_usd)  # Message for invalid age
    
except ValueError:
    print("Invalid input! Please enter a valid age")
 



    























